        <view class="goods" bindtap="goDetails">
            <view class="goods-img">
                <image src="{{imgUrls}}" mode="widthFix" style="width: {{imageWidth}}px;"></image>
            </view>
            <view class="mes-box">
                <text class="price">{{price}}å…ƒ</text>
                <text class="label">{{label[0]}}</text>
                <text class="label">{{label[1]}}</text>
                <text class="label">{{label[2]}}</text>
            </view>
            <view class="describe">{{describe}}</view>
        </view>
    </view>
</template>
