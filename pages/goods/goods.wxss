/* pages/goods/goods.wxss */
.goods{
    display: flex;
    font-family: '微软雅黑';
    flex-direction: column;
}
.goods-img img{
    display: block;
    float: left;
}
.mes-box{
    display: flex;
    background: #fff;
    padding: 20rpx;
    flex-direction: row;
    border-bottom: 1px solid #e3e8ee;
}
.price{
    color: #ff3300;
    line-height: 44rpx;
}
.label{
    padding: 6rpx 12rpx;
    background: #e3e8ee;
    margin-left: 20rpx;
}
.describe{
    background: #fff;
    padding: 0rpx 20rpx 20rpx;
    flex-direction: row;
    line-height: 80rpx;
}